{% extends 'base.html.twig' %}

{% block css %}
<link rel="stylesheet" href="/css/Page/recap.css">
{% endblock %}


{% block title  %}{% endblock %}

{% block content %}

<div class="containerRecap">
    <div class="leftt">
        <p class="recap">Récapitulatif</p>
        <p class="info"> Info client : </p>
        <p>{{ data.firstname }} {{ data.lastname }}</p>
        <p>{{ data.adresse }}</p>
        <p>{{ data.city }} - {{ data.codecity }}</p>
        <p>{{ data.country }}</p>
        <p class="num">+{{ data.numero }}</p>
    </div>
    <div class="ligne"></div>
    <div class="rightt">
        <div class="first">
            <p class="prix">Prix : </p>

            <div>
                {% for product in products %}
                    <div class="flex">
                        <p class="matelas">{{ product.name }} </p>
                        <p>{{ product.price }} €</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="second">

            <div class="flex"><p class="matelas">Sous-total :</p><p>{{ total }} &euro;</p></div>
            <div class="flex"><p class="matelas">Livraison :</p><p>600  €</p></div>
            <div class="flex"><p class="matelas">Tax :</p><p>{{ total/100*5 }} €</p></div>
            <div class="flex"><p class="matelas">Total :</p><p>{{ total+600+total/100*5 }} &euro;</p></div>
        </div>
        <form>

            <a href="./paiement?firstname={{ data.firstname }}&lastname={{ data.lastname }}&adresse={{ data.adresse }}&city={{ data.city }}&codepostal={{ data.codecity }}&country={{ data.country }}"><div class="continuer">Continuer</div></a>
        </form>
    </div>
</div>
{% endblock %}
