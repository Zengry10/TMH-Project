{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="/css/Backoffice/list.css">
{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <h1>Location back office</h1>

    <table border=1>
        <thead>
            <tr>
                <td>Ville</td>
                <td>Prix à la nuit</td>
                <td>Mètre carrés</td>
                <td>Description</td>
                <td>DPE</td>
                <td>GES</td>
                <td>Nombre de salles</td>
                <td>Nombre de chambres</td>
                <td>Actions</td>
            </tr>
        </thead>

        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.city }}</td>
                <td>{{ location.nightPrice }}</td>
                <td>{{ location.sqrtMeters }}</td>
                <td class="description">{{ location.description }}</td>
                <td>{{ location.dpe }}</td>
                <td>{{ location.ges }}</td>
                <td>{{ location.nbOfRooms }}</td>
                <td>{{ location.nbOfChambers }}</td>
                <td><button><a href="/admin/location/delete/{{ location.id }}">Delete</a></button></td>
            </tr>
        {% endfor %}

            <tr>
                <td colspan="10" style="text-align: center"><a href="/admin/location/create">+</a></td>
            </tr>

        </tbody>
    </table>

{% endblock %}