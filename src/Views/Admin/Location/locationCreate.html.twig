{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="/css/Backoffice/create.css">
{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <div>
        <a href=".">Revenir à la liste</a>

        <div class="head">Ajouter une nouvelle maison</div>

        <form action="" method="POST" enctype="multipart/form-data">
            <label for="houseCity">Ville de la maison: </label>
            <input type="text" name="houseCity" id="houseCity" required/>
            <br>

            <label for="uploadedFile1">Images:</label>
            <div>
                <input type="file" name="uploadedFile1">
                <input type="file" name="uploadedFile2">
                <input type="file" name="uploadedFile3">
            </div>
            <br>

            <label for="nightPrice">Prix à la nuit (en €): </label>
            <input type="number" name="nightPrice" id="nightPrice" required/>
            <br>

            <label for="sqrtMeters">Mètre carré: </label>
            <input type="number" name="sqrtMeters" id="sqrtMeters" required/>
            <br>

            <label for="description">Description: </label>
            <textarea id="description" name="description" required></textarea>
            <br>

            <label for="dpe">DPE: </label>
            <select name="dpe" id="dpe" required>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
            </select>
            <br>

            <label for="ges">GES: </label>
            <select name="ges" id="ges" required>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
            </select>
            <br>

            <label for="nbOfRooms">Nombre de salles: </label>
            <input type="number" name="nbOfRooms" id="nbOfRooms" required/>
            <br>

            <label for="nbOfChambers">Nombre de chambres: </label>
            <input type="number" name="nbOfChambers" id="nbOfChambers" required/>
            <br>

            <input type="submit" value="Publier la maison"/>
        </form>
    </div>
{% endblock %}